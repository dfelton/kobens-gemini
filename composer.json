{
    "name": "kobens/kobens-gemini",
    "description": "For facilitating trades on the Gemini exchange.",
    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Darren Felton",
            "email": "darren_felton@hotmail.com"
        }
    ],
    "repositories": {
        "coin-market-cap": {
            "type": "path",
            "url": "/home/dfelton/repos/dfelton/kobens-coin-market-cap"
        },
        "kobens-core": {
            "type": "vcs",
            "url": "https://github.com/dfelton/kobens-core"
        },
        "kobens-currency": {
            "type": "vcs",
            "url": "https://github.com/dfelton/kobens-currency"
        },
        "kobens-exchange": {
            "type": "vcs",
            "url": "https://github.com/dfelton/kobens-exchange"
        },
        "kobens-math": {
            "type": "vcs",
            "url": "https://github.com/dfelton/kobens-math"
        },
        "kobens-http": {
            "type": "vcs",
            "url": "https://github.com/dfelton/kobens-http"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "amphp/websocket-client": "^1.0",
        "kobens/kobens-core": "dev-master",
        "kobens/kobens-currency": "^4.0",
        "kobens/kobens-exchange": "^1.0",
        "kobens/kobens-http": "dev-master",
        "kobens/kobens-math": "^2.0",
        "symfony/console": "^4.2",
        "zendframework/zend-config": "^3.2",
        "zendframework/zend-db": "^2.9",
        "kobens/coin-market-cap": "dev-main"
    },
    "require-dev": {
        "zendframework/zend-debug": "^2.6",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Kobens\\Gemini\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KobensTest\\Gemini\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "github-protocols": [
            "ssh"
        ],
        "preferred-install": {
            "kobens/*": "source",
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "phpunit": [
            "phpunit -v test/Unit"
        ],
        "phpcs": [
            "phpcs --standard=PSR12 --exclude=PSR12.Files.FileHeader,Generic.Files.LineLength --cache src"
        ],
        "phpcbf": [
            "phpcbf --standard=PSR12 src"
        ]
    }
}
